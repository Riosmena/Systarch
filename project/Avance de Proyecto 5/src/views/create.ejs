                    <option value="1">One</option>
                    <option value="2">Two</option>
                    <option value="3">Three</option>
                  </select>

            </div>

            <div id="crearProyecto">
                
                <h3 class="fw-light">Assigned Epics</h3>
                <input class="form-control" type="text" placeholder="" aria-label="default input example" style="width: 600px; height: 300px;">

            </div>
        </div>
    </section>
