<style>

    /* GENERAL */

    section{
        padding-top: 1.3em;
    }
    h1{
        margin-left: 1em;
        font-size: 58px;
    }

    /* HEAD */

    #head{
        display: flex;
    }

    /* BODY */

    #nombre{
        margin-left: 2.8em;
