<%- include('includes/head.ejs') %>
    <section>
        <h1 class="display-6">
          Crea una cuenta
        </h1>

        <br><br><br>

        <form action="/usuarios/signup" method="POST">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
          <div class="row g-2">

            <div class="col-md">
              <div class="form-floating">
                <input type="text" class="form-control" id="userName" name="userName" placeholder="Bernardo Gómez">
                <label for="floatingInputGrid">Nombre Completo</label>
              </div>
            </div>

            <div class="col-md">
              <div class="form-floating" id="userSkill" name="userSkill">
                <select class="form-select" id="floatingSelectGrid">
                  <option value="1">One</option>
                  <option value="2">Two</option>
                  <option value="3">Three</option>
                </select>
                <label for="floatingSelectGrid">Skill</label>
              </div>
            </div>

          </div>
          
          <br><br><br>

          <div class="row g-2">

            <div class="col-md">
              <div class="form-floating">
                <input type="email" class="form-control" id="userMail" name="userMail" placeholder="name@example.com">
                <label for="floatingInputGrid">Correo Electrónico</label>
              </div>
            </div>

            <div class="col-md">
              <div class="form-floating">
                <input type="password" class="form-control" id="userPass" name="userPass" placeholder="A1234567890">
                <label for="floatingInputGrid">Contraseña</label>
              </div>
            </div>

          </div>

          <br><br><br>

          <div class="row g-2">

            <div class="col-md">
              <div class="form-floating">
                <input type="tel" class="form-control" id="userCel" name="userCel" placeholder="4421234567">
                <label for="floatingInputGrid">Teléfono</label>
              </div>
            </div>

            <div class="col-md">
              <div class="form-floating">
                <input type="password" class="form-control" id="userConfPass" name="userConfPass" placeholder="A1234567890" onkeyup="validatePwords()">
                <label for="floatingInputGrid">Confirmar Contraseña</label>
              </div>
            </div>

          </div>

          <br><br><br>

          <button class="btn btn-primary" type="submit">Crear</button>
          
        </form> 
        <script>
          function validatePwords() {
            let pw1 = document.getElementById('userPass').value;
            let pw2 = document.getElementById('userConfPass').value;
            const mensaje = document.getElementById('mensaje');

            if (pw2 != pw1) {
              mensaje.innerHTML = "Las contraseñas no coinciden";
              mensaje.style.color = "red";
            }

            else { 
              mensaje.innerHTML = "";
            }
          }
        </script>
    </section>

<%- include('includes/foot.ejs') %>